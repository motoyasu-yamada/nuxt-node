{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["../../main/node/*"],
      "@/*": ["../../main/node/*"]
    },
    "types": ["@types/jest"],
  },
  "include": ["../../config/**/*.*","../../main/node/**/*.*"]
}
